[
  {
    "name": "Install dependencies",
    "command": "cd /tmp/project && reejs i",
    "extraArgs": {
      "warmup": 1,
      "runs": 3,
      "prepare": "rm -rf /tmp/project && npx --yes giget@latest gh:ree-js/project /tmp/project --prefer-offline",
      "cleanup": "rm -rf /tmp/project"
    }
  },
  {
    "name": "Packit - Node [DEV]",
    "command": "cd /tmp/project && reejs packit node -d -o",
    "extraArgs": {
      "warmup": 1,
      "runs": 3,
      "prepare": "rm -rf /tmp/project && npx --yes giget@latest gh:ree-js/project /tmp/project --prefer-offline && cd /tmp/project && reejs i",
      "cleanup": "rm -rf /tmp/project"
    }
  },
  {
    "name": "Packit - Node [PROD]",
    "command": "cd /tmp/project && reejs packit node",
    "extraArgs": {
      "warmup": 1,
      "runs": 3,
      "prepare": "rm -rf /tmp/project && npx --yes giget@latest gh:ree-js/project /tmp/project --prefer-offline && cd /tmp/project && reejs i",
      "cleanup": "rm -rf /tmp/project"
    }
  }
]
